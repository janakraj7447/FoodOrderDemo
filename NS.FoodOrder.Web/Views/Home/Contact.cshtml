@model NS.FoodOrder.Data.CustomEntities.ContactViewModel
@{
    Layout="_LayoutContact";
}

  <section class="book_section layout_padding">
    <div class="container">
      <div class="heading_container">
        <h2>
        Contact us
        </h2>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form_container">
             @using (Html.BeginForm("AddContactDetails", "Home", FormMethod.Post, new {id="formRegistration"})){
              <div>
                 @Html.TextBoxFor(x =>x.Name, "", new { @class = "form-control", placeholder = "Enter your name here" })
              </div>
              <div>
                   @Html.TextBoxFor(x =>x.Email, "", new { @class = "form-control", placeholder = "Enter your email here" })
              </div>
              <div>
                  @Html.TextBoxFor(x =>x.Subject, "", new { @class = "form-control", placeholder = "Enter subject here" })
              </div>
              <div>
                @Html.TextBoxFor(x =>x.Description, "", new { @class = "form-control", placeholder = "Enter Description here" })
              </div>
              <div class="btn_box">
                <button>
                  Submit
                </button>
              </div>
             }
          </div>
        </div>
        <div class="col-md-6">
          <div class="map_container">
            <div id="googleMap"></div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCh39n5U-4IoWpsVGUHWdqB6puEkhRLdmI&callback=myMap">
  </script>