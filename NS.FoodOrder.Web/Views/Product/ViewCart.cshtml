@model IEnumerable<NS.FoodOrder.Data.Entities.Cart>
@{
    Layout="_LayoutMenu";
}
<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th,
    td {
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #232423;
        color: white;
    }

    tr:nth-child(even) {
        background-color: #F2F2F2;
    }

    a {
        color: black;
        text-decoration: none;
    }

    a:hover {
        color: red;
        text-decoration: underline;
    }
</style>

 <div class="col-md-12 text-center">
  
         
   
</div>
</div>

<div class="container pt-7">
     <h2 class="pt-3">Cart Items</h2> 
<table>
    <thead>
        <tr>
         <th>Product</th>
         <th>Name</th>
         <th>Quantity</th>
         <th>Price</th>
         <th>Remove Item</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prod in Model)
        {
            var idIndex=0;
            var fieldName="Quantity"+idIndex;
            <tr>
                <td>
                    <img src="~/UploadProduct/@prod.Product.Photo" height=20% width=20% alt="NO IMAGE FOUND" srcset="">   
                </td>

                <td>
                   @prod.Product.Name             
                </td>

                 <td>
                      <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                      <button class="btn btn-link px-2 btn-stepdown"
                        >
                       <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-minus" viewBox="0 0 16 16">
                        <path d="M5.5 8a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1H6a.5.5 0 0 1-.5-.5z"/>
                        </svg>
                      </button>
                       
                       
                      <input type="number" id="@fieldName" name="@fieldName" class="form-control input-number" value="10" min="1" max="100">

                      <button class="btn btn-link px-2 btn-stepup"
                      >
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                      <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                    </svg>
                      </button>
                    </div> 

                    
                    
                   @* @prod.Quantity *@
                    
                </td>

                 <td>
                     â‚¹ @prod.Product.Price
                    
                </td>
                <td>
                    <a  asp-action="DeleteItem" asp-controller="Product" asp-route-id="@prod.Id">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" style="margin:36px;" viewBox="0 0 16 16">
                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z"/>
                        <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z"/>
                        </svg>
                    </a>

                   @* @Html.ActionLink("Delete","DeleteItem","Product",new{prod.Id},new{@class="btn btn-danger"}) *@
                </td>

            </tr>
        }
    </tbody>
</table>
</div>

@section scripts{
<script>
$('.btn-stepdown').on("click",
        function () {
@* alert("hii") *@
debugger;
this.parentNode.querySelector('input[type=number]').stepDown;
        })

        $('.btn-stepup').on("click",
        function () {
@* alert("hii") *@
this.parentNode.querySelector('input[type=number]').stepUp;

        })
</script>
}