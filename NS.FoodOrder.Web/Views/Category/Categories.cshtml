@model IEnumerable<NS.FoodOrder.Data.Entities.Category>
@{
    Layout="_Layout";
}

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th,
    td {
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #4CAF50;
        color: white;
    }

    tr:nth-child(even) {
        background-color: #F2F2F2;
    }

    a {
        color: black;
        text-decoration: none;
    }

    a:hover {
        color: #4CAF50;
        text-decoration: underline;
    }
</style>

<div class="col-md-12">
    <div class="row">
    <div class="col-md-6">
       <h2>Categories</h2>
    </div>
   
   <div class="col-md-6">
    <div class="text-center float-end">
      <button class="btn btn-info" > <a asp-controller="Category" asp-action="AddEditCategory" style="text-decoration:none;color:white;">Add Category</a> </button>
    </div>
    </div>
</div>
</div>

<table>
    <thead>
        <tr>
         <th>Category</th>
         <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prod in Model)
        {
            <tr>
                <td>
                      @Html.ActionLink(prod.Name ,"AddEditCategory","Category",new{prod.Id},new{@class="fw-bold"})
                    
                </td>

                <td>
                   @if(prod.IsActive){
                         @Html.ActionLink("DeActivate","ActivateDeactivateCategory","Category",new{prod.Id},new{@class="btn btn-danger",onclick="return confirm('Do you really want to Deactivate this category')"})
                    }
                    else{
                          @Html.ActionLink("Activate","ActivateDeactivateCategory","Category",new{prod.Id},new{@class="btn btn-danger",onclick="return confirm('Do you really want to Activate this category')"})
                    }
                </td>
                
            </tr>
        }
    </tbody>
</table>

